pkgname=nsgallery-git
pkgver=0.1
pkgrel=1
pkgdesc="A naively simple web gallery"
arch=('x86_64')
url="https://github.com/MetroWind/nsgallery"
license=('WTFPL')
groups=()
depends=('imagemagick' 'perl-image-exiftool' 'libheif' 'libwebp' 'svt-av1')
makedepends=('git' 'cmake')
provides=("${pkgname%-git}")
conflicts=("${pkgname%-git}")
replaces=()
backup=("etc/nsgallery.yaml")
options=()
install=
source=('git+https://github.com/MetroWind/nsgallery.git' "sysusers-nsgallery.conf" "nsgallery.service" "nsgallery.yaml")
noextract=()
md5sums=('SKIP')

pkgver()
{
	cd "$srcdir/${pkgname%-git}"
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short=7 HEAD)"
}

build()
{
	cd "$srcdir/${pkgname%-git}"
    cmake -B build \
          -DCMAKE_BUILD_TYPE='None' \
          -DCMAKE_INSTALL_PREFIX='/usr' \
          -Wno-dev .
    cmake --build build
}

package()
{
	cd "$srcdir/${pkgname%-git}"
    install -Dm755 -t "$pkgdir/usr/bin" build/nsgallery
    mkdir -pv "$pkgdir/var/lib/nsgallery"
    cp -r statics templates "$pkgdir/var/lib/nsgallery"
    install -Dm644 -t "$pkgdir/etc" nsgallery.yaml
    install -Dm644 "sysusers-nsgallery.conf" "${pkgdir}/usr/lib/sysusers.d/nsgallery.conf"
    install -Dm644 "nsgallery.service" "${pkgdir}/usr/lib/systemd/system/nsgallery.service"

}
